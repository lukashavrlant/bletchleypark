{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true,
        "target": "ES2015",
        "lib": ["es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}